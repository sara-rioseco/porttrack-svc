{
  "name": "porttrack-svc",
  "version": "1.0.0",
  "description": "PortTrack Port Management API - Mock service for DevOps implementation",
  "keywords": [
    "devops",
    "ci",
    "cd",
    "github-actions"
  ],
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Sara Rioseco",
    "email": "sara.rioseco@gmail.com"
  },
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t porttrack-api .",
    "docker:run": "docker run -p 8080:8080 porttrack-api"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@fluent-org/logger": "^1.0.10",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/*.(test|spec).[jt]s?(x)"
    ],
    "collectCoverageFrom": [
      "app.js",
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  }
}

